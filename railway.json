{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "dockerImage": "redis:alpine",
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["python310", "gcc", "zlib", "libjpeg", "libpng", "libwebp", "libtiff", "libgl1", "libglib2.0-0", "libsm6", "libxext6", "libxrender1", "libgomp1", "libzbar0"]
        }
      }
    }
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "uvicorn app.main:app --host 0.0.0.0 --port $PORT",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}